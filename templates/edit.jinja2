{% extends "base.jinja2" %}
{% block body %}
    {% if request.authenticated_userid %}
    <aside>
        <form action="{{ request.route_url('edit', id=entry.id, title=entry.title) }}" method="POST" class="edit_entry">
            <div class="field">
                <label for="title">Title</label>
                <textarea name="title" id="title" rows="1" cols="30">{{  entry.title  }}</textarea>
            </div>
            <div class="field">
                <label for="text">Text</label>
                <textarea name="text" id="text" rows="5" cols="80">{{  entry.text  }}</textarea>
            </div>
            <div class="control_row">
                <input type="submit" value="Update" name="Update"/>
            </div>
        </form>
    </aside>
    {% endif %}
{% endblock %}